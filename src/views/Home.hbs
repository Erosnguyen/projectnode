<div class="container">  
    
        <div class="row ">
            {{#each db}}
            <div class="col-xs-2 col-sm-4 col-md-4 card-home mt-4">
                <div class="card" >
                    <a href="product/{{this.slug}}">
                        <img class="card-img-top" src="{{this.img}}" alt="Card image cap">
                    </a>
                    
                    <div class="card-body">
                        <a href="product/{{this.slug}}" class="card-slugbody">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <a href="#" class="btn btn-primary">Buy</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
</div>  
{{>Footer}}